{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@theme/*": [".vitepress/theme/*"]
    }
  },
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*",
    ".vitepress/types/auto-imports.d.ts",
    ".vitepress/types/components.d.ts",
  ]
}
